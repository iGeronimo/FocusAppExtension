{
  "manifest_version": 3,
  "name": "Pomodoro Focus Blocker",
  "version": "1.0.6",
  "description": "A Pomodoro timer with website blocking functionality to boost productivity",
  
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "tabs",
    "windows",
    "webRequest",
    "webRequestBlocking"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },

  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Focus Blocker",
    "default_icon": {
      "16": "icons/icon-16.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png"
  },

  
  "browser_specific_settings": {
    "gecko": {
      "id": "focusapp-extension@example.com",
      "strict_min_version": "109.0"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "reflection-saved.html",
  "reflection-saved.js",
        "reflection-log.html",
        "reflection-log.js",
        "manage-blocked.html",
        "manage-blocked.js",
    "settings.html",
    "settings.js",
        "stats.html",
        "stats.js",
        "time-up.html",
        "time-up.js",
  "deep-work.html",
  "deep-work.js",
        "offscreen.html",
        "offscreen.js",
        "sound/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}